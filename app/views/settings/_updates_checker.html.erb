<fieldset class="box">
  <legend>Redmine</legend>
  <div class="tabular settings">
    <p>
      <label>Redmine updates</label>
      <%= check_box_tag 'settings[redmine_updates]', '1', @settings['redmine_updates'] %>
    </p>
    <p>
      <label>Redmine version</label>
      <%= select_tag 'settings[redmine_version]', options_for_select(['Major', 'Minor', 'Fix'], @settings['redmine_version']) %>
    </p>
  </div>
</fieldset>
<fieldset class="box">
  <legend>Plugins</legend>
  <div class="tabular settings">
    <p>
      <label>Updatable plugins</label>
      <%= check_box_tag 'settings[notify_updatable]', '1', @settings['notify_updatable'] %>
    </p>
    <p>
      <label>Updated plugins</label>
      <%= check_box_tag 'settings[notify_updated]', '1', @settings['notify_updated'] %>
    </p>
    <p>
      <label>Unknown plugins</label>
      <%= check_box_tag 'settings[notify_unknown]', '1', @settings['notify_unknown'] %>
    </p>
    <p>
      <label>Excluded plugins</label>
      <%= select_tag 'settings[excluded_plugins]', options_from_collection_for_select(Redmine::Plugin.all, :id, :name, @settings['excluded_plugins']), :multiple => true %>
    </p>
  </div>
</fieldset>
<fieldset class="box">
  <legend>General</legend>
  <div class="tabular settings">
    <p>
      <label>Email recipients</label>
      <%= text_area_tag 'settings[email_recipients]', @settings['email_recipients'] %>
      <em class="info">Multiple recipients allowed (comma separated).</em>
    </p>
  </div>
</fieldset>
